<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/darkTosca</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:actionBarStyle">@style/UndepressActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="actionButtonStyle">@style/UndepressIcon</item>
    </style>

    <style name="UndepressActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:background">@color/orange</item>
    </style>

    <style name="UndepressTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/darkTosca</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabTextAppearance">@style/UndepressTabText</item>
        <item name="tabBackground">@color/darkTosca</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="UndepressTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/tosca</item>
    </style>

    <style name="UndepressIcon" parent="Widget.AppCompat.ActionButton">
        <item name="android:width">10dp</item>
        <item name="android:height">10dp</item>
    </style>

    <style name="ChatsListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">7dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="BubbleChatLinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BubbleChatText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
