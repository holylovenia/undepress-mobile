<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.hulahoop.mentalhealth.undepress.ResultActivity">

    <LinearLayout
        android:padding="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_screen_logo_margin"
            android:text="Welcome, Holy."
            android:textColor="@color/darkTosca"
            android:textSize="48sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/main_screen_logo_margin"
                android:text="Based on DSM-5, you"
                android:textColor="@color/darkTosca"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/depression_verdict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="have"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="depression symptoms."
            android:textColor="@color/darkTosca"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/main_screen_logo_margin"
                android:text="You are experiencing"
                android:textColor="@color/darkTosca"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/number_of_symptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 of 9"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="depression symptoms."
            android:textColor="@color/darkTosca"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/symptoms_details"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/main_screen_small_padding"
            android:textColor="@color/white"
            android:lineSpacingExtra="@dimen/main_screen_logo_margin"
            android:padding="20dp"
            android:backgroundTint="@color/darkTosca"
            android:text=""
            android:background="@drawable/rounded_corners"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/main_screen_small_padding"
            android:textColor="@color/darkTosca"
            android:padding="20dp"
            android:text="We strongly recommend you to get help from the experts. We can help you to get better."
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:padding="20dp"
            android:id="@+id/get_better_button"
            android:layout_gravity="center_horizontal"
            android:text="I want to get better"
            android:textStyle="bold"
            android:backgroundTint="@color/orange"
            android:background="@drawable/rounded_corners"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
